<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <div id="errors">
      <h2><%= pluralize(@post.errors.count, "errors") %></h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content, :class => 'form-control ckeditor' %><br>
  </p>
  <p>
    <%= f.label :img %><br>
    <%= f.text_field :img %><br>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>